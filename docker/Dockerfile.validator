# =============================================================================
# Validator Agent Dockerfile
# =============================================================================
#
# The Validator Agent validates requirements and integrates them into Neo4j.
#
# Build:
#   docker build -t graphrag-validator -f docker/Dockerfile.validator .
#
# Run:
#   docker run -p 8002:8002 \
#     -e DATABASE_URL=postgresql://... \
#     -e NEO4J_URI=bolt://... \
#     -e OPENAI_API_KEY=... \
#     graphrag-validator
# =============================================================================

FROM python:3.11-slim AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy and install requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Production image
FROM python:3.11-slim

LABEL maintainer="Graph-RAG Team"
LABEL description="Validator Agent for requirement validation and graph integration"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    VALIDATOR_PORT=8002

WORKDIR /app

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy source code
COPY src/ ./src/
COPY config/ ./config/
COPY citation_tool/ ./citation_tool/

# Install citation tool
RUN if [ -d "./citation_tool" ] && [ -f "./citation_tool/pyproject.toml" ]; then \
        pip install --no-cache-dir -e ./citation_tool[full]; \
    fi

# Create directories
RUN mkdir -p /app/workspace /app/logs

# Create non-root user
RUN groupadd -r graphrag && useradd -r -g graphrag graphrag
RUN chown -R graphrag:graphrag /app
USER graphrag

# Expose health check port
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Run the Validator Agent
CMD ["uvicorn", "src.agents.validator.app:app", "--host", "0.0.0.0", "--port", "8002"]
