# =============================================================================
# Universal Agent Dockerfile
# =============================================================================
#
# A unified Docker image for any agent configuration.
# The agent behavior is determined by the AGENT_CONFIG environment variable.
#
# Build:
#   docker build -t graphrag-agent -f docker/Dockerfile.agent .
#
# Run with defaults:
#   docker run -p 8001:8001 \
#     -e DATABASE_URL=postgresql://... \
#     -e OPENAI_API_KEY=... \
#     graphrag-agent
#
# Run with custom config:
#   docker run -p 8001:8001 \
#     -e AGENT_CONFIG=my_agent \
#     -e DATABASE_URL=postgresql://... \
#     -e OPENAI_API_KEY=... \
#     graphrag-agent
#
# Entry point: agent.py (Universal Agent CLI)
# =============================================================================

FROM python:3.11-slim AS builder

WORKDIR /app

# Install build dependencies (git needed for pip install from git URLs)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Production image
FROM python:3.11-slim

LABEL maintainer="Graph-RAG Team"
LABEL description="Universal Agent for document processing and requirement validation"

# Create non-root user early so COPY --chown can reference it
RUN groupadd -r graphrag && useradd -r -g graphrag -m graphrag

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    AGENT_CONFIG=defaults \
    AGENT_PORT=8001 \
    PLAYWRIGHT_BROWSERS_PATH=/opt/playwright

WORKDIR /app

# Install runtime dependencies
# Note: ripgrep and jq support the coding agent's run_command tool
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    git \
    poppler-utils \
    ripgrep \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from builder (system-owned, read-only is fine)
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy source code with correct ownership (avoids expensive chown -R later)
COPY --chown=graphrag:graphrag src/ ./src/
COPY --chown=graphrag:graphrag config/ ./config/
COPY --chown=graphrag:graphrag agent.py ./

# Install Playwright chromium for browser-based research tools
RUN playwright install --with-deps chromium

# Create runtime directories with correct ownership
RUN mkdir -p /app/workspace /app/logs && \
    chown -R graphrag:graphrag /app/workspace /app/logs

USER graphrag

# Expose default port (can be overridden)
EXPOSE 8001
EXPOSE 8002

# Health check using the configured port
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${AGENT_PORT}/health || exit 1

# Run the Universal Agent with config from environment
CMD ["sh", "-c", "python agent.py --config ${AGENT_CONFIG} --port ${AGENT_PORT} --host 0.0.0.0"]
