# =============================================================================
# Universal Agent Dockerfile
# =============================================================================
#
# A unified Docker image for any agent configuration.
# The agent behavior is determined by the AGENT_CONFIG environment variable.
#
# Build:
#   docker build -t graphrag-agent -f docker/Dockerfile.agent .
#
# Run with defaults:
#   docker run -p 8001:8001 \
#     -e DATABASE_URL=postgresql://... \
#     -e OPENAI_API_KEY=... \
#     graphrag-agent
#
# Run with custom config:
#   docker run -p 8001:8001 \
#     -e AGENT_CONFIG=my_agent \
#     -e DATABASE_URL=postgresql://... \
#     -e OPENAI_API_KEY=... \
#     graphrag-agent
#
# Entry point: agent.py (Universal Agent CLI)
# =============================================================================

FROM python:3.11-slim AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy and install requirements (exclude local editable citation_tool - installed later)
COPY requirements.txt .
RUN grep -v "citation_tool" requirements.txt > requirements_docker.txt && \
    pip install --no-cache-dir -r requirements_docker.txt

# Production image
FROM python:3.11-slim

LABEL maintainer="Graph-RAG Team"
LABEL description="Universal Agent for document processing and requirement validation"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    AGENT_CONFIG=defaults \
    AGENT_PORT=8001

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    git \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy source code
COPY src/ ./src/
COPY config/ ./config/
COPY citation_tool/ ./citation_tool/
COPY agent.py ./

# Install citation tool
RUN if [ -d "./citation_tool" ] && [ -f "./citation_tool/pyproject.toml" ]; then \
        pip install --no-cache-dir -e ./citation_tool[full]; \
    fi

# Install Playwright chromium for browser-based research tools
RUN playwright install --with-deps chromium

# Create directories
RUN mkdir -p /app/workspace /app/logs

# Create non-root user
RUN groupadd -r graphrag && useradd -r -g graphrag graphrag
RUN chown -R graphrag:graphrag /app
USER graphrag

# Expose default port (can be overridden)
EXPOSE 8001
EXPOSE 8002

# Health check using the configured port
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${AGENT_PORT}/health || exit 1

# Run the Universal Agent with config from environment
CMD python agent.py --config ${AGENT_CONFIG} --port ${AGENT_PORT} --host 0.0.0.0
