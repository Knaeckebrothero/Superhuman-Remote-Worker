{
  "$schema": "schema.json",
  "agent_id": "creator",
  "display_name": "Creator Agent",
  "description": "Autonomous agent for extracting requirements from documents and writing them to the requirement cache.",

  "llm": {
    "model": "gpt-oss-120b",
    "temperature": 0.0,
    "reasoning_level": "high",
    "base_url": null
  },

  "workspace": {
    "structure": [
      "archive/",
      "documents/",
      "tools/"
    ],
    "instructions_template": "creator_instructions.md",
    "initial_files": {
      "instructions.md": "instructions/creator_instructions.md"
    },
    "max_read_size": 25000
  },

  "tools": {
    "workspace": [
      "read_file",
      "write_file",
      "append_file",
      "list_files",
      "delete_file",
      "search_files",
      "file_exists",
      "get_workspace_summary"
    ],
    "todo": [
      "todo_write",
      "archive_and_reset"
    ],
    "domain": [
      "extract_document_text",
      "get_document_info",
      "web_search",
      "cite_document",
      "cite_web",
      "list_sources",
      "get_citation",
      "list_requirements",
      "get_requirement",
      "add_requirement"
    ],
    "completion": [
      "mark_complete",
      "job_complete"
    ]
  },

  "todo": {
    "max_items": 25,
    "archive_on_reset": true,
    "archive_path": "archive/",
    "auto_reflection": true,
    "reflection_task_content": "Review plan in main_plan.md, update with progress, adjust if needed, create next todos"
  },

  "connections": {
    "postgres": true,
    "neo4j": false
  },

  "polling": {
    "enabled": true,
    "table": "jobs",
    "status_field": "creator_status",
    "status_value_pending": "pending",
    "status_value_processing": "processing",
    "status_value_complete": "complete",
    "status_value_failed": "failed",
    "interval_seconds": 30
  },

  "limits": {
    "max_iterations": 500,
    "context_threshold_tokens": 80000,
    "tool_retry_count": 3
  },

  "context_management": {
    "compact_on_archive": true,
    "keep_recent_tool_results": 5,
    "summarization_prompt": "Summarize the work completed so far. Focus on: (1) Which document chunks have been processed, (2) How many requirement candidates have been identified, (3) What research has been completed, (4) Current progress on the plan. Include any key decisions made.",
    "protected_context_enabled": true,
    "protected_context_plan_file": "main_plan.md",
    "protected_context_max_chars": 2000,
    "protected_context_include_todos": true
  },

  "document_processing": {
    "chunking_strategy": "legal",
    "max_chunk_size": 1000,
    "chunk_overlap": 200,
    "extraction_mode": "balanced",
    "min_confidence_threshold": 0.6
  },

  "research": {
    "web_search_enabled": true,
    "graph_search_enabled": true,
    "research_depth": "thorough"
  }
}
